{
  "name": "angle-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "deploy:upgrade": "hardhat deploy --network mainnet --tags agTokenUpgrade",
    "etherscan:mainnet": "hardhat --network mainnet etherscan-verify",
    "etherscan:rinkeby": "hardhat --network rinkeby etherscan-verify",
    "etherscan:polygon": "hardhat --network polygon etherscan-verify",
    "license": "hardhat prepend-spdx-license",
    "lint": "yarn lint:sol && yarn lint:js:fix",
    "lint:js:fix": "eslint --ignore-path .gitignore --fix --max-warnings 30 'test/**/*.{js,ts}' '*.{js,ts}'",
    "lint:sol": "solhint --fix --max-warnings 20 \"contracts/**/*.sol\"",
    "mainnetForkRemote:deploy": "rm -rf ./deployments/mainnetForkRemote && hardhat deploy --network mainnetForkRemote --tags unpausing",
    "node:instant": "FORK=true hardhat node --tags instant",
    "node:fork:implems": "FORK=true hardhat node --tags multicall_with_failure",
    "node:fork:agTokenUpgrade": "FORK=true hardhat node --tags agTokenUpgrade",
    "node:fork:swapper": "FORK=true hardhat node --tags swapper",
    "prettier": "yarn prettier:js && yarn prettier:sol",
    "prettier:sol": "prettier --write 'contracts/**/*.sol'",
    "prettier:js": "prettier --write 'test/**/*.{js,ts}' '*.{js,ts}'",
    "size": "hardhat size-contracts",
    "foundry:run": "docker run -it --rm -v $(pwd):/app -w /app ghcr.io/foundry-rs/foundry sh",
    "foundry:test": "forge test -vvvv"
  },
  "keywords": [],
  "author": "Angle Core Team",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/AngleProtocol/boilerplate/issues"
  },
  "devDependencies": {
    "@angleprotocol/sdk": "1.0.100",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "4.4.2",
    "@openzeppelin/contracts-upgradeable": "4.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@openzeppelin/test-helpers": "0.5.12",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bn": "0.3.0",
    "dotenv": "10.0.0",
    "eslint": "7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-mocha-no-only": "1.1.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "ethers": "5.5.1",
    "hardhat": "^2.10.2",
    "hardhat-abi-exporter": "2.2.1",
    "hardhat-contract-sizer": "2.0.3",
    "hardhat-deploy": "0.9.6",
    "hardhat-docgen": "1.3.0",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-spdx-license-identifier": "2.0.3",
    "mocha": "^9.2.1",
    "prettier": "2.3.2",
    "@types/mocha": "^9.1.1",
    "prettier-plugin-solidity": "1.0.0-beta.17",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-docgen": "0.5.13",
    "ts-node": "10.1.0",
    "typechain": "6.0.5",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.4",
    "fs-extra": "^10.0.0",
    "hardhat-shorthand": "^1.0.0",
    "solc": "0.8.12",
    "yargs": "^17.5.1"
  }
}
